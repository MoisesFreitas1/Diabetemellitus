<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="229sp"
        android:layout_height="137sp"
        android:src="@drawable/uninovafapi"
        android:id="@+id/novafapi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mestrado em Saúde da Familia"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formação do enfermeiro docente na atenção à pessoa com diabetes mellitus e saúde óssea"
        android:textSize="20sp"
        android:padding="10sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="\nAluna: Alissandra Vitório de Sousa\n\nOrientadora: Dra. Camila Aparecida Pinheiro Landim Almeida"
        android:textColor="@android:color/black"/>
    <ImageView
        android:id="@+id/proxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:src="@drawable/seta1"/>
</LinearLayout>